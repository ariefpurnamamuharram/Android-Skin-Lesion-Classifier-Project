<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/standard_margin"
                layout="@layout/element_profile_panel"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/intercomponent_margin"
                android:layout_marginBottom="@dimen/intercomponent_margin"/>

        <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/element_nav_cardview"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/intercomponent_margin"
                android:layout_marginBottom="@dimen/intercomponent_margin"/>

        <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/standard_margin"
                layout="@layout/element_credits"/>

    </LinearLayout>


</ScrollView>